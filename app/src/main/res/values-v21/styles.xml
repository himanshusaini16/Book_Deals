<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/ManualColor</item>
        <item name="colorPrimaryDark">@color/ManualColor</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#28AA8E</item>
        <item name="colorPrimaryDark">@color/DarkManual</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
